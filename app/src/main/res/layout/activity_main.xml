<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.laurensius_dede_suhardiman.mqttandroidexample.MainActivity">

    <EditText
        android:id="@+id/textMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter message"/>

    <Button
        android:id="@+id/publishMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish" />


    <EditText
        android:id="@+id/subscribeTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Subscribe topic"/>

    <Button
        android:id="@+id/subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe"/>

    <EditText
        android:id="@+id/unSubscribeTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Unsubscribe topic"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/unSubscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UnSubscribe" />

</LinearLayout>